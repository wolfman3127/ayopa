
<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if user_signed_in? %>
  Signed in as... <%= current_user.username %>



  <div class="field">
    <%= form.label :title %>
    <%= form.text_area :title, id: :listing_title %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :listing_price %>
  </div>

  <div class="field">
    <%= form.label :descrition %>
    <%= form.text_area :descrition, id: :listing_descrition %>
  </div>


  <div class="field">

    <%= form.hidden_field :user, id: :listing_user, value: current_user.username %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% else %>
  <%= link_to 'Please sign in', new_user_session_path %>
  <% end %>
<% end %>
